.ican-header {
  height: 80px;
  background-color: #343D5F;
}
.ican-header h1 {
  font-size: 30px;
  font-weight: 400;
  margin-left: 100px;
  line-height: 80px;
  display: inline-block;
}
.ican-header h1 img {
  vertical-align: middle;
}
.ican-header ul {
  display: inline-block;
  margin-left: 160px;
  height: 100%;
  vertical-align: top;
}
.ican-header ul li {
  float: left;
  font-size: 16px;
  cursor: pointer;
  line-height: 80px;
  
}
.ican-header ul li.active {
  position: relative;
}
.ican-header ul li.active::after {
  content: '';
  display: block;
  height: 4px;
  width: 60px;
  background: #13B5B1;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%)
}
.ican-header ul li:hover {
  color: #13B5B1;
  font-weight: 700;
}
.ican-header ul li:not(:last-child) {
  margin-right: 94px;
}
.ican-header .login-state {
  float: right;
  line-height: 80px;
  margin-right: 97px;
}
.ican-header .login-state span {
  font-size: 14px;
  cursor: pointer;
}
.ican-header .login-state span:nth-child(2) {
  display: inline-block;
  margin: 0 10px;
}


.ican-wrapper .content {
  width: 1200px;
  margin: 0 auto;
}
.ican-wrapper .content > h3 {
  margin-top: 50px;
  margin-bottom: 12px;
}
.ican-wrapper .content > h3 > span:nth-of-type(1) {
  font-size:14px;
  font-weight:400;
}
.ican-wrapper .content > h3 > span:nth-of-type(2) {
  color: #13B5B1;
  font-size: 13px;
}
.ican-wrapper .content .label-box {
 border-bottom: 1px solid #333C5B;
}
.ican-wrapper .content .label-box .label {
  font-size: 12px;
  padding: 4px 12px;
  border: 1px solid #fff;
  display: inline-block;
  margin-left: 5px;
  margin-right: 20px;
  margin-top: 10px;
  cursor: pointer;
}
.ican-wrapper .content .label-box .label-add {
  color: #13B5B1;
  border-color: #13B5B1;
}
.ican-wrapper .content .label-box > p {
  color: #A8A8A8;
  margin-top: 30px;
  font-size: 12px;
}



.ican-wrapper .modal {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.1);
}
.ican-wrapper .modal .form {
  width: 380px;
  height: 240px;
  box-sizing: border-box;
  padding: 13px 20px;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.ican-wrapper .modal  .form > h3 {
  font-size: 18px;
  color: #13B5B1;
  font-weight: 400;
  border-bottom: 1px solid #DCDCDC;
  padding-bottom: 9px;
}
.ican-wrapper .modal .form .section {
  margin-top: 37px;
}
.ican-wrapper .modal .form label {
  color: #333333;
  font-size: 14px;
}
.ican-wrapper .modal  .form input {
  width: 240px;
  height: 30px;
  border: 1px solid #DCDCDC;
}
.ican-wrapper .modal  .form button {
  width: 80px;
  height: 30px;
  background-color: #fff;
  margin-top: 20px;
  cursor: pointer;
}
.ican-wrapper .modal  .form button:nth-of-type(1) {
  border: 1px solid #DCDCDC;
  color: #EF4343;
  margin-left: 75px;
}
.ican-wrapper .modal  .form button:nth-of-type(2) {
  border: 1px solid #13B5B1;
  color: #13B5B1;
  margin-left: 20px;
}
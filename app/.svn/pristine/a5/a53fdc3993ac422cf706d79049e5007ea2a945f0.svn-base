        getAticle()
    }

    function getAticle(){
        var url = "/web/getrecommend"
        var data = {professionId: $("#job").val(), page: 1}
        var list = ajax(url, data)
        console.log(list.data)
        var tr=""
        for (n in list.data){
            tr+=getTr(list.data[n])
        }
        $("tbody").empty()
        $("tbody").append($(tr))
    }
    function getTr(data) {
        var date=new Date(data.publishTime)
        date = dateFtt("yyyy-MM-dd",date)
        var tr='<tr>'+
        '<td>'+
        '<input type="checkbox">'+
        '<input type="hidden" value="'+data.id+'">'+
        ' <p class="titleChoose">'+data.contentTitle+'</p>'+
        ' </td>'+
        ' <td>'+
        ' <p>'+date+'</p>'+
        ' </td>'+
        '</td>'+
        ' </tr>';
        return tr;
    }
    //新增
    function addAction() {
        location.href = "/web/index" ;
    }

    //显示模态框
    function openRecommendModal() {
        document.querySelector('#deleteModal').style.display = "block"
    }
    //判断是否选中checkbox
    function isCheck() {
        document.querySelector('.tableElective').addEventListener('click', function () {
            Array.prototype.slice.call(document.querySelectorAll('input[type=checkbox]')).forEach(function (x) {
                if (x.checked) {
                    x.parentNode.parentNode.style.background = "#343D5F"
                } else {
                    x.parentNode.parentNode.style.background = "#48516F"
                }
            })
        })
    }
    //全选
    function checkedAll() {
        Array.prototype.slice.call(document.querySelectorAll('input[type=checkbox]')).forEach(function (x) {
            x.checked = true
        })
    }
    //反选
    function checkeOthers() {
        Array.prototype.slice.call(document.querySelectorAll('input[type=checkbox]')).forEach(function (x) {
            x.checked = !x.checked
        })
    }
    //编辑
    function editAction(){
        if ( $('input:checkbox:checked').length!=1){
           alert("请选择一项")
            return
        }
        location.href = "/web/index?id=" + $('input:checkbox:checked').next().val();
    }

    //删除
    function removeClass() {
        openRecommendModal()
    }
   function  closeAction() {
       document.querySelector('#deleteModal').style.display = "none"
   }
   function submitAction() {
        var arr=new Array()
       $('input:checkbox:checked').each(function () {
           arr.push($(this).next().val())
       })
       var ids=arr.join(",")
       var url="/web/delete"
       var data={ids:ids}
       ajax(url,data)
       console.log(ids)
       getAticle();
       closeAction()
   }
    //上传
    function uploadClass() {
        Array.prototype.slice.call(document.querySelectorAll('input[type=checkbox]')).forEach(function (x) {
            if (x.checked) {
                // 上传文件业务逻辑
            }
        })
    }
    window.onload = function () {
        initChoose()
        isCheck()
    }
    function ajax(url, data) {
        var result;
        $.ajax({
            type: "POST",
            url: url,
            data: data,
            dataType: "json",
            async: false,
            success: function (data) {
                result = data;
            }
        });
        return result;
    }
    function dateFtt(fmt,date) { //author: meizz
        var o = {
            "M+" : date.getMonth()+1,                 //月份
            "d+" : date.getDate(),                    //日
            "h+" : date.getHours(),                   //小时
            "m+" : date.getMinutes(),                 //分
            "s+" : date.getSeconds(),                 //秒
            "q+" : Math.floor((date.getMonth()+3)/3), //季度
            "S"  : date.getMilliseconds()             //毫秒
        };
        if(/(y+)/.test(fmt))
            fmt=fmt.replace(RegExp.$1, (date.getFullYear()+"").substr(4 - RegExp.$1.length));
        for(var k in o)
            if(new RegExp("("+ k +")").test(fmt))
                fmt = fmt.replace(RegExp.$1, (RegExp.$1.length==1) ? (o[k]) : (("00"+ o[k]).substr((""+ o[k]).length)));
        return fmt;
    }
</script>
